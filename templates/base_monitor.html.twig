<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Open Factory - Flow{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('imgs/favicon.png') }}" />
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/styles/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/styles/custom.css') }}">
        {% endblock %}
    </head>
    {% block alert %}


        {% if app.request.server.get('APP_ENV') != 'prod' %}
            <style>
                #is-not-prod-alert {
                    z-index: 99999;
                    position: absolute;
                    width: 100%;
                    top: 0%;
                    text-align: center;
                    font-size: 30px;
                    background-color: #ff8a80 ;
                }
            </style>
            <div id='is-not-prod-alert' class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="fa-solid fa-triangle-exclamation"></i>
                <strong>Attention</strong> you are in an approval environment.
                <button type="button\" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endif %}
    {% endblock %}
    <body>

        {% block body %}
            <div class="container-fluid">
                <div class="ajax_load">
                    <div class="ajax_load_box">
                        <div class="ajax_load_box_circle"></div>
                        <p class="ajax_load_box_title">Aguarde, carregando...</p>
                    </div>
                </div>
            </div>

            {% if is_granted('ROLE_TECHNICAL') %}
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <a class="navbar-brand" href="#">
                            <img src="{{ asset('imgs/logo.png') }}" width="300" height="auto" class="d-inline-block align-top" alt="Promaint Factory">
                        </a>
                    </nav>
                </div>
            {% endif %}
        {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('assets/js/jquery.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('assets/js/jquery.form.js') }}" type="text/javascript"></script>
        <script src="{{ asset('assets/js/bootstrap.bundle.js') }}" type="text/javascript"></script>
        <script src="{{ asset('assets/js/scripts.js') }}" type="text/javascript"></script>
        <script src="{{ asset('assets/js/monitor.js') }}" type="text/javascript"></script>
        <script src="{{ asset('assets/js/masks.js') }}" type="text/javascript"></script>
    {% endblock %}
    </body>
</html>
